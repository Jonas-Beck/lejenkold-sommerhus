---
import Card from './Card.astro';

export interface Props {
  title: string;
  period: string;
  price: string;
  colorClass: string;
}

const { title, period, price, colorClass } = Astro.props;
---

<Card>
  <h3 class={`font-semibold text-lg mb-2 ${colorClass}`}>{title}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{period}</p>
  <p class="text-2xl font-bold">{price}</p>
  <p class="text-sm text-gray-600 dark:text-gray-400">pr. uge plus forbrug</p>
</Card>
