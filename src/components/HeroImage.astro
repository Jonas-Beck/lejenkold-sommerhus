---
export interface Props {
  src: string;
  alt: string;
  class?: string;
}

const { src, alt, class: className = "" } = Astro.props;
---

<div class={`relative w-full overflow-hidden rounded-lg shadow-lg mb-8 ${className}`}>
  <img 
    src={src} 
    alt={alt}
    class="w-full h-auto max-h-[20rem] md:max-h-[28rem] object-cover"
    loading="eager"
  />
  <div class="absolute inset-0 bg-black/10 rounded-lg pointer-events-none"></div>
</div>
