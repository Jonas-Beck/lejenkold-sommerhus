---
import Card from './ui/Card.astro';
import CardContent from './ui/CardContent.astro';
import ContactInfo from './ContactInfo.astro';
import GoogleMaps from './GoogleMaps.astro';

export interface Props {
  email: string;
  phone: string;
  address: string;
  class?: string;
}

const { email, phone, address, class: className = "" } = Astro.props;
---

<aside class={`space-y-6 ${className}`}>
  <!-- Contact Information -->
  <Card>
    <CardContent>
      <h2 class="text-xl font-semibold mb-4">Kontakt os</h2>
      <ContactInfo email={email} phone={phone} />
      
      <div class="mt-4 pt-4 border-t border-border">
        <p class="text-sm text-muted-foreground">
          <strong>Adresse:</strong><br>
          {address}
        </p>
      </div>
    </CardContent>
  </Card>

  <!-- Map -->
  <Card>
    <CardContent>
      <GoogleMaps 
        address={address}
        title="Find sommerhuset"
        height="h-48 md:h-64"
      />
    </CardContent>
  </Card>

  <!-- Quick Info -->
  <Card>
    <CardContent>
      <h3 class="text-lg font-semibold mb-3">Hurtig info</h3>
      <div class="space-y-2 text-sm">
        <div class="flex justify-between">
          <span class="text-muted-foreground">GÃ¥afstand til strand:</span>
          <span class="font-medium">300m</span>
        </div>
        <div class="flex justify-between">
          <span class="text-muted-foreground">Sovepladser:</span>
          <span class="font-medium">4 + 2 (anneks)</span>
        </div>
        <div class="flex justify-between">
          <span class="text-muted-foreground">Wi-Fi:</span>
          <span class="font-medium">50/50 Mbit</span>
        </div>
        <div class="flex justify-between">
          <span class="text-muted-foreground">Parkering:</span>
          <span class="font-medium">Ja</span>
        </div>
      </div>
    </CardContent>
  </Card>
</aside>
