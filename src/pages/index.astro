  {
    src: "/images/exterior-1.jpg",
    alt: "Strand og omgivelser",
    category: "Omgivelser"
  },
  {
    src: "/images/living-room.jpg",
    alt: "Natur omkring sommerhuset",
    category: "Omgivelser"
  }
