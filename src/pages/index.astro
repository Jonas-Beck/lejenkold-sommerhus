---
import Layout from '../layouts/main.astro';
import Section from '../components/Section.astro';
import SectionHeader from '../components/SectionHeader.astro';
import ContactInfo from '../components/ContactInfo.astro';
import FeatureList from '../components/FeatureList.astro';
import PriceCard from '../components/PriceCard.astro';
import Card from '../components/ui/Card.astro';
import CardContent from '../components/ui/CardContent.astro';

// Data for the components
const facilities = [
	"Rummelig udestue med sofa og spisebord",
	"Soveværelse med dobbeltseng", 
	"Toilet med brus",
	"Køkken med mikroovn, kølefryseskab og opvaskemaskine",
	"Stue med sovesofa 140×200",
	"4 sovepladser + 2 i anneks"
];

const equipment = [
	"50/50 bredbånd",
	"Varmepumpe/aircon", 
	"Boxer TV lille pakke",
	"Strøm tændt ved ankomst",
	"El afregnes efter forbrug"
];
---

<Layout title="Diernæs Strandby 98 - Sommerhus udlejning">
	<!-- Header -->
	<header class="text-center mb-12">
		<h1 class="text-4xl font-bold text-foreground mb-4">Diernæs Strandby 98</h1>
		<p class="text-xl text-muted-foreground">Lille, privat og hyggeligt sommerhus ved Diernæs bugt</p>
	</header>

	<!-- Contact Info -->
	<Section>
		<Card>
			<CardContent>
				<SectionHeader class="mb-4">Kontakt os</SectionHeader>
				<ContactInfo email="lejenkold@gmail.com" phone="53 80 58 36" />
			</CardContent>
		</Card>
	</Section>

	<!-- Description -->
	<Section>
		<SectionHeader>Beskrivelse</SectionHeader>
		<div class="prose prose-lg max-w-none">
			<p class="mb-4">
				Lille, privat og hyggeligt sommerhus, beliggende ved Diernæs bugt, 6100 Haderslev, udlejes.
				<strong>Gåafstand til stranden (300m).</strong>
			</p>
			
			<div class="grid md:grid-cols-2 gap-6 my-6">
				<FeatureList title="Faciliteter" items={facilities} />
				<FeatureList title="Udstyr & Service" items={equipment} />
			</div>

			<div class="bg-blue-50 dark:bg-blue-950/20 p-4 rounded-lg my-4">
				<h4 class="font-semibold mb-2">Anneks</h4>
				<p class="text-sm">
					Der kan lejes anneks med dobbeltseng 180x200 sammen med huset. 
					Denne lejes naturligvis kun ud til sommerhuslejer, og er således tom hvis ikke I ønsker at benytte jer af denne.
				</p>
			</div>
		</div>
	</Section>

	<!-- Pricing -->
	<Section>
		<SectionHeader>Priser</SectionHeader>
		<div class="grid md:grid-cols-3 gap-4">
			<PriceCard 
				title="Høj Sæson"
				period="Uge 26-32"
				price="3.500 Kr."
				colorClass="text-green-600"
			/>
			<PriceCard 
				title="Mellem Sæson"
				period="Uge 33-36, 18-25, 7, 42"
				price="3.000 Kr."
				colorClass="text-orange-600"
			/>
			<PriceCard 
				title="Lav Sæson"
				period="Øvrige uger"
				price="2.000 Kr."
				colorClass="text-blue-600"
			/>
		</div>
		
		<div class="mt-4 p-4 bg-yellow-50 dark:bg-yellow-950/20 rounded-lg">
			<p class="font-semibold">Anneks: +1.000 Kr. pr. uge</p>
		</div>
	</Section>

	<!-- Footer -->
	<footer class="mt-12 pt-8 border-t border-border text-center text-sm text-muted-foreground">
		<p>&copy; 2024 Lejenkold - Diernæs Strandby 98</p>
	</footer>
</Layout>
